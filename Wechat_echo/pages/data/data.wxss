.flex1 {
    flex: 1;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}


.tabTit{
  background-color: #f5f5f5;
  height:90rpx;
  line-height: 90rpx;
  border-bottom: solid 1px #eee;
  position: fixed;
  top:0;
  width: 680rpx;
  margin-left: 35rpx;
  margin-top: 30rpx;
  z-index: 1;
  font-size:15px;
  box-shadow: 3px 3px 15px rgba(95, 100, 148, 0.39);
}

.tabTit text{
  font-size: 30rpx;
  position: absolute;
  width:200rpx;
  height:60rpx;
  line-height:60rpx;
  float:left;
  padding-left:40rpx;
}
 
.tabTit .active{
  color:#5263EF;
  background: #fff;
}
 
.tabTit image{
  position: absolute;
  width:30rpx;
  height:30rpx;
  margin-left:50rpx;

}

.tabTit .active image{
  transform: rotate(180deg);
  background: none;
}

.box {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.tabLayer{
  background-color: #fff;
  box-shadow: 0 5px 5px rgba(0,0,0,.15);
  width:750rpx;
  overflow: hidden;
  position: fixed;
  top:90rpx;
  z-index: 1;
  padding-bottom: 40rpx;
  border-bottom: solid 1px #eee;
  text-align: center;
}
.tabLayer text{
  width:210rpx;
  height:60rpx;
  line-height:60rpx;
  float:left;
  border: solid 1px #eee;
  margin:20rpx 0 0 26rpx;
  font-size:15px;
}

.tabLayer .active{
  color:#5263EF;
  border-color:#5263EF;
}



