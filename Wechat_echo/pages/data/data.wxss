/* pages/data/data.wxss */

.page_section{
  position: relative;
  height: 100rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(to bottom, #5263EF, #959FF5);
}

.input{
  position: absolute;
  width: 500rpx;
  height: 54rpx;
  margin: 30rpx 125rpx 10rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  color:#000;
  background: #fff;
}

.data_list{
  background-color: #F4F4F4;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  padding-top: 15rpx;
}

.top{
  margin-bottom: 15rpx;
}

.update_time{
  font-size: 30rpx;
  text-align: center;
  color: #999;
}

.item {
  min-height: 165rpx;
  width: 700rpx;
  border-top: 1px;
  margin-bottom: 15rpx;
	border-radius: 15px;
  margin-left: auto; margin-right: auto;
  background-color: #fff;
  display: block;
  box-sizing: border-box;
}

.title {
  margin: 20rpx 30rpx 0rpx;
  font-size: 40rpx;
  display: block;
}

.box {
  margin: 10rpx 100rpx 0rpx 30rpx;
  font-size: 28rpx;
  color: #999
}

.time {
  text-align: right;
  margin-right: 20px;
  margin-bottom: 5px;
  font-size: 30rpx;
  color: #999
}


.ripple :active:after {
  transform: scale(0, 0);
  opacity: .3;
  transition: 0s;
}

.ripple :after {
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  background-image: radial-gradient(circle, #666 10%, transparent 10.01%);
  background-repeat: no-repeat;
  background-position: 50%;
  transform: scale(10, 10);
  opacity: 0;
  transition: transform .3s, opacity .5s;
}

.ripple {
  position: relative;
  overflow: hidden;
}

.loading_row {
  text-align: center;
  height: 100rpx;
  margin: 0rpx;
  padding: 0rpx;
  background-color: #f4f4f4;
}

.loading_icon {
  text-align: center;
  width: 70rpx; 
  height: 70rpx;
  margin: 20rpx;
  padding: 0rpx;
}



