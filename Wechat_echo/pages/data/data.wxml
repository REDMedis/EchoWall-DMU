<!--pages/data/data.wxml-->
<view class="container">
    <view class="data_list">
        <view wx:for="{{echowall}}" wx:key="{{item.id}}" class="item ripple" bindtap='itemTap' data-id="{{item.id}}">
            <view class="title">
                {{item.title}}
            </view>
            <view class="context">
                {{item.box}}
            </view>
            <view class="time">
                {{item.time}}
            </view>
        </view>
    </view>
    <view class="loading_row" wx:if="{{loading}}">
        <image class="loading_icon" mode='scaleToFill' animation="{{refreshAnimation}}" src="../../resources/loading.png">loading icon</image> 
    </view>
</view>